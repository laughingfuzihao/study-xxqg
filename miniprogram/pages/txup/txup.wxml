<view class="page" data-weui-theme="{{theme}}">
    <view class="weui-form">
        <view class="weui-form__text-area">
            <h2 class="weui-form__title">提醒时间</h2>
        </view>
        <view class="weui-form__control-area">
            <view class="weui-cells__group weui-cells__group_form">
                <view class="weui-cells__title"></view>
                <view class="weui-cells weui-cells_form">
                    <view class="weui-cell weui-cell_active">
                        <view class="weui-cell__hd">
                            <label class="weui-label">提醒时间</label>
                        </view>

                        <view class="weui-cell__bd">
                            <picker mode="time" value="{{time1}}"  bindchange="bindTimeChange1">
                                <view class="weui-input">{{time1}}</view>
                            </picker>
                        </view>
                    </view>
                </view>
            </view>
        </view>
        <view class="weui-form__tips-area">
            <image src="/images/C.png" alt class="shanshuo" style="width:45px;height:45px;"></image>
        </view>
        <view class="weui-form__tips-area">
            <h4 class="weui-form__title">记得每日点击学习提醒哦</h4>
        </view>
        <view class="weui-form__opr-area">
            <a class="weui-btn weui-btn_primary" bindtap="qd">确定</a>
        </view>
        <view class="weui-form__tips-area">
            <view class="weui-form__tips">
            </view>
        </view>
        <view class="weui-form__extra-area">
            <view class="weui-footer">
                <view class="weui-footer__links">
                </view>
                <view class="weui-footer__text">Copyright © laughing</view>
            </view>
        </view>
    </view>
</view>
